<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Widget.Neumorph.CardView"
    app:neumorph_lightSource="leftTop"
    android:id="@+id/main_cardd"
    app:neumorph_shapeType="flat"

    app:neumorph_shapeAppearance="@style/CustomShapeAppearnce"
    android:paddingTop="8dp"
    android:background="#F0F0F3"

   >

    <ImageView
        android:id="@+id/banner_img"
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/image"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="239dp"
        android:layout_height="1sp"
        android:layout_marginTop="160dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/text_color"
        ></View>
    <TextView
        android:id="@+id/titre"
        android:layout_width="230dp"
        android:layout_height="20dp"
        android:layout_gravity="start"
        android:layout_marginTop="170dp"
        android:layout_marginStart="12dp"
        android:text="titre de publication"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/prix_pub"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="195dp"
        android:layout_marginStart="12dp"
        android:text="prix"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/pub_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="195dp"
        android:visibility="invisible"

        android:text="id"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="15sp"/>


</soup.neumorphism.NeumorphCardView>