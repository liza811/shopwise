<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:elevation="10dp"
    android:padding="5dp"

    app:layout_insetEdge="bottom"


    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"

    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#4D74B5"
    app:cardElevation="10dp"
    >
<LinearLayout
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
android:padding="15dp"
android:outlineSpotShadowColor="#4D74B5"
    android:outlineAmbientShadowColor="#4D74B5"


android:elevation="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:drawableLeft="@drawable/baseline_info_24"
        android:drawablePadding="10dp"
        android:drawableTint="#9FBFF8"
        android:text="Se connecter"

        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4.5sp"
        android:layout_marginTop="12dp"
        android:text="Créez un compte ou connectez-vous à Shopwise pour faire cette action."
        android:textColor="#454E5F"
        android:textSize="15sp"
        android:paddingStart="5dp"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="15dp"

        android:paddingEnd="0dp">

        <TextView
            android:id="@+id/annulerr"
            android:background="@drawable/background_light_gray"


            android:layout_width="100dp"
            android:layout_height="38dp"


            android:layout_gravity="bottom|start"


            android:gravity="center"
            android:text="Annuler"

            android:textColor="#4D74B5"

            android:textSize="16sp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/confirmer"

            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintStart_toStartOf="parent"


            tools:ignore="UnknownIdInLayout">

        </TextView>

        <TextView
            android:id="@+id/continuer"

android:textStyle="bold"
          android:background="@drawable/background_light_blue"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom|start"


            android:gravity="center"


            android:text="Continuer"
            android:textAllCaps="false"
            android:textColor="#4D74B5"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:neumorph_backgroundColor="#EAF2FF"



>

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>