<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260sp"
    android:layout_height="70sp"
    android:layout_margin="0dp"
    android:layout_gravity="center_horizontal"

    android:id="@+id/panier_card"
    app:neumorph_shadowElevation="1dp"


    style="@style/Widget.Neumorph.CardView"
    app:neumorph_lightSource="leftTop"
    app:neumorph_shapeType="flat"

    app:neumorph_shapeAppearance="@style/CustomShapeAppearnce"

    >
    <LinearLayout
        android:layout_gravity="start|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">



            <TextView
                android:id="@+id/pan_titree"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"


                android:layout_marginStart="8dp"
                android:text="titre de publication"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/pan_prixx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"

                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:text="prix"

                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="15sp"/>




    </LinearLayout>


</soup.neumorphism.NeumorphCardView>