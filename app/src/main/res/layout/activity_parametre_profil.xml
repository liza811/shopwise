<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ParametreProfil">

    <androidx.core.widget.NestedScrollView

        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <soup.neumorphism.NeumorphImageView

                    android:id="@+id/pexit"

                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="65dp"
                    android:layout_height="65dp"


                    android:src="@drawable/lefttt"
                    app:neumorph_lightSource="leftTop"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearnce"

                    app:neumorph_shapeType="basin"

                    tools:ignore="MissingConstraints"

                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="140dp"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="Modifier le profil"
                    android:textColor="@color/text_color"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintHorizontal_bias="0.63"
                    app:layout_constraintStart_toEndOf="@+id/neumorphImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.509" />

                <TextView
                    android:id="@+id/profil_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
android:id="@+id/pp_logo"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="10sp"
                android:background="@drawable/profile_logo1"
                android:backgroundTint="@color/primary"
                android:gravity="center"
                android:text="L"
                android:textColor="@color/white"

                android:textSize="27sp"
                android:textStyle="bold" />
            <soup.neumorphism.NeumorphCardView
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="0dp"
                style="@style/Widget.Neumorph.CardView"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shapeType="flat"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearnce"
                android:gravity="center_horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informations"
                android:layout_gravity="center"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="22dp"/>
            </soup.neumorphism.NeumorphCardView>


            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearnce"


                app:neumorph_shapeType="flat">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Nom d'utilisateur"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/enom_utilisateur"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bordure"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="120dp"
                    android:text="Email"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/eemail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bordure"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="225dp"
                    android:text="Mot de passe"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/emot_de_passe"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="267dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"

                    android:background="@drawable/bordure"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="340dp"
                    android:text="NÂ° Telephone"
                    android:textSize="17sp" />
                <EditText
                    android:id="@+id/num_tel"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="380dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"

                    android:background="@drawable/bordure"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:textSize="15sp" />


            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:id="@+id/id_utilisateurr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="liza"
                android:visibility="invisible" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/sauvgarder"


        style="@style/Widget.Neumorph.Button"

        android:layout_width="match_parent"

        android:layout_height="70dp"
        android:layout_margin="0dp"
        android:layout_marginEnd="15dp"
        android:background="@android:color/transparent"
        android:gravity="center"


        android:text="Sauvgarder"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:neumorph_backgroundColor="@color/black"

        app:neumorph_lightSource="leftTop"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearnce"
        app:neumorph_shapeType="flat">

    </soup.neumorphism.NeumorphButton>

</androidx.constraintlayout.widget.ConstraintLayout>