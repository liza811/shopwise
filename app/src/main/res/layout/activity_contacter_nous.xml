<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F3"
    android:orientation="vertical"
    tools:context=".Contacter_nous">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <soup.neumorphism.NeumorphImageView
            android:id="@+id/cexit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            style="@style/Widget.Neumorph.CardView"
            app:neumorph_lightSource="leftTop"
            app:neumorph_shapeType="basin"
            android:background="@drawable/lefttt"
            android:backgroundTint="@color/text_color"
            android:src="@drawable/left"


            app:neumorph_shapeAppearance="@style/CustomShapeAppearnce"
            tools:ignore="MissingConstraints"

            />


       </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView

        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <soup.neumorphism.NeumorphCardView
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginStart="30dp"

                android:layout_marginTop="100dp"
                style="@style/Widget.Neumorph.CardView"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shapeType="flat"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearnce"
                android:gravity="center_horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contactez ShopWise"
                    android:layout_gravity="center"
                    android:textColor="@color/text_color"
                    android:drawableLeft="@drawable/baseline_message_24"
                    android:drawablePadding="10dp"
                    android:textStyle="bold"
                    android:textSize="22dp"/>


            </soup.neumorphism.NeumorphCardView>
            <soup.neumorphism.NeumorphCardView
                android:id="@+id/card5"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                app:neumorph_lightSource="leftTop"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="12dp"
                android:lineHeight="22sp"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearnce"
                app:neumorph_shapeType="flat"
                tools:ignore="MissingConstraints">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"

                    android:text="N'hésitez pas à nous contacter en cas de problème avec le site, si vous avez des suggestions à nous faire, ou encore si vous avez des propositions ou des questions concernant un éventuel partenariat ou à propos de la publicité.

Nous ferons notre possible pour répondre très rapidement."
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:lineSpacingExtra="7sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse:"

                    android:textColor="@color/text_color"
                    android:drawableLeft="@drawable/baseline_location_on_24"
                    android:drawablePadding="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="220dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="12dp"
                    android:textSize="18dp"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:paddingStart="8dp"
                    android:paddingTop="12dp"
                    android:text="Sidi Ahmed, Bejaia"
                    android:layout_marginTop="240dp"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"

                    android:textColor="@color/text_color"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:drawablePadding="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="280dp"
                    android:drawableTint="#2F2E2E"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="12dp"
                    android:textSize="18dp"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:paddingStart="8dp"
                    android:paddingTop="12dp"
                    android:text="shopwise@gmail.com"
                    android:layout_marginTop="300dp"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />
            </soup.neumorphism.NeumorphCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>

